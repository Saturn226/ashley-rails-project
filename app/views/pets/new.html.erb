<%= form_for @pet do |f| %>
<div class="form-group">
  <%= f.label :name %><br>
  <%= f.text_field :name%>
</div>

<div class="form-group">
  <%= f.label :bio %><br>
  <%= f.text_area :bio%>
</div>

<div class="form-group">
  <%= f.label :price%><br>
  <%= f.number_field :price %>
</div>

<div class="form-group">
 <%= f.radio_button("pet", "adoptable", "yes") %>
 <%= f.radio_button("pet", "adoptable", "no") %>
</div>

  <%=f.submit "Create Pet" %>


<%end%>