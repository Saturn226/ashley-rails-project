
<h1>Create a New Pet </h1>

<%= form_for @pet do |f| %>
<div class="form-group">
  <%= f.label :name %><br>
  <%= f.text_field :name%>
</div>

<div class="form-group">
  <%= f.label :bio %><br>
  <%= f.text_area :bio%>
</div>

<div class="form-group">
  <%= f.label :price%><br>
  <%= f.number_field :price %>
</div>

<div class="form-group">

  <%= f.label :adoptable %> <br>
  <%= f.label :adoptable, "Yes", :value => "true"  %>
    <%= f.radio_button :adoptable, true %>
    <%= f.label :adoptable, "No", :value => "false" %>
    <%= f.radio_button :adoptable, false, :checked => true %>
</div>


<!-- <select name="pet[breed_id]">
  <option value="1">Mut</option>
  <option value="2">Bulldog</option>
</select> -->

<%= f.label :Breed %>
<%= f.select :breed_id , Breed.all.collect{|b| [b.name, b.id]} %> <br>

<%= f.submit "Create Pet" %>
  


<%end%>