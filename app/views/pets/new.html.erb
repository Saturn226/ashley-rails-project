
<h1>Create a New Pet </h1>

<%= form_for @pet do |f| %>
<div class="form-group">
  <%= f.label :name %><br>
  <%= f.text_field :name%>
</div>

<div class="form-group">
  <%= f.label :bio %><br>
  <%= f.text_area :bio%>
</div>

<div class="form-group">
  <%= f.label :price%><br>
  <%= f.number_field :price %>
</div>

<div class="form-group">

  <%= f.label :adoptable %> <br>
  <%= f.label :adoptable, "Yes", :value => "true"  %>
    <%= f.radio_button :adoptable, true %>
    <%= f.label :adoptable, "No", :value => "false" %>
    <%= f.radio_button :adoptable, false, :checked => true %>
</div>

  
<div class="form-group">
  <%= f.label :Breed %>
  <%= f.select :breed_names , Breed.all.collect{|b| [b.name, b.id]} %> <br>
</div>

<p>Or create a new breed</p>

  <!-- <input type="text" name= pet[breed_name]>  -->
 
  <%= fields_for :breed, @pet.build_breed do |breed_fields| %>
    <%= breed_fields.text_field :name %>
  <% end %>
<%= f.submit "Create Pet" %>
  


<%end%>